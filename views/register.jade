extends layout

block content
    h2.page-header Register
    p please Register filling the form below
    if errors
        each error, i in errors
            div.alert.alert-danger.col-sm-6 #{error.msg}
    div
        form(method= 'post' , action = '/users/register' ,
        enctype = 'multipart/form-data')
            .form-horizontal
                .form-group
                    label.control-label.col-sm-2 name 
                    input(name='name' , type= 'text' placeholder='Enter name') 
                .form-group
                    label.control-label.col-sm-2 Email
                    input(name='email' , type= 'email' placeholder='Enter email')
                .form-group
                    label.control-label.col-sm-2 username
                    input(name='username' , type= 'text' placeholder='Enter username')
                .form-group
                    label.control-label.col-sm-2 password
                    input(name='password' , type= 'password' placeholder='Enter password')
                .form-group
                    label.control-label.col-sm-2 confirm password
                    input(name='password2' , type= 'password' placeholder='Reapeat password ')
                .form-group
                    label.control-label.col-sm-2 profile image
                    input(name='profileimage', type= 'file') 
                    br
                    input.col-sm-offset-2.btn.btn-primary(type='submit' , name='submit' , value='register')
